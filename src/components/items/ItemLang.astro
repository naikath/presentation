<style>
	form {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		gap: 0.5rem;
	}

	button {
		border: solid 2px white;
		border-radius: 4px;
		background: hsl(271, 76%, 53%);
		padding: 0.5rem;
		color: white;
	}

	button:hover {
		background: hsl(271, 76%, 40%);
	}

	h2 {
		font-size: 2rem;
		text-align: center;
	}

	label {
		font-size: 1.5rem;
	}

	.card-lang > div {
		display: none;
		position: relative;
		margin-top: 1rem;
		inset: 0;
		border-radius: 1rem;
		background-color: hsl(0, 0%, 0%, 0.5);
		padding: 1rem;
		width: 100%;
	}

	.card-lang > div.show {
		display: block;
	}
</style>

<script>
	const form = document.querySelector('.card-lang > form') as HTMLFormElement;
	const message = document.querySelector('.card-lang > div');

	Array.from(form.elements).forEach(element => {
		if (element.tagName === 'INPUT') {
			element.addEventListener('change', () => {
				message.classList.add('show');
				setTimeout(() => {
					message.classList.remove('show');
				}, 3000);
			});
		}
	});

	form.addEventListener('submit', e => {
		// console.log('Submiting');
		e.preventDefault();
	});
</script>
