---
import Item from '../items/Item.astro';
import ItemLang from '../items/ItemLang.astro';
import ItemSkill from '../items/ItemSkill.astro';
---

<section class='items'>
	<article>
		<ItemLang />
	</article>

	<article>
		<ItemSkill />
	</article>
</section>

<style>
	section {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
		grid-auto-rows: max-content;
		align-items: start;
		gap: 2rem;
		padding: 2rem;
	}

	article {
		--color-bg-gradient: linear-gradient(
			15deg,
			hsla(271, 76%, 53%, 0.9),
			70%,
			hsla(0, 100%, 50%, 0.9)
		);
		--color-bg: hsla(271, 76%, 70%, 0.4);

		z-index: 0;
		border: 1px solid white;
		border-radius: 1rem;
		background: var(--color-bg);
		padding: 1rem;
		max-width: 400px;
	}
</style>
