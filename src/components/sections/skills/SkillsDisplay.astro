<style>
	.skills__display {
		--color-skills-display: hsla(231, 48%, 45%, 0.6);
		position: relative;
	}

	article {
		display: flex;
		position: relative;
		flex-direction: column;
		gap: 0.5rem;
		transition: opacity 0.3s ease-out;
		inset: 0;
		border-radius: 1rem;
		background-color: var(--color-skills-display);
		padding: 0.7rem;
		text-align: start;
	}

	.skills__display {
		& .skills__explain {
			opacity: 1;
		}

		& .skills__description {
			opacity: 0;
		}
	}

	.skills__display--show {
		& .skills__explain {
			opacity: 0;
		}

		& .skills__description {
			opacity: 1;
		}
	}

	img {
		font-size: 0.8rem;
	}

	h3 {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		gap: 5%;
	}

	button {
		position: absolute;
		top: 0;
		right: 0;
		border-top-right-radius: inherit;
		border-bottom-left-radius: 0.2rem;
		background-color: hsl(0, 0%, 0%, 0.5);
		padding: 0.3rem;
		aspect-ratio: 1;
		width: 2.4rem;
		font-size: 1.4rem;
	}

	button:hover {
		background-color: hsl(0, 0%, 0%, 0.9);
	}
</style>
