---
import SkillsCollection from './SkillsCollection.astro';
import SkillsDescription from './SkillsDescription.astro';
---

<!--
	Class Naming:
	
	.skills {
		.skills__collection {
			.skills__group {
				.skills__icon-grid {
					.skills__icon
				}
			}
		}
		.skills__description {}
	}

-->
<section class='skills'>
	<article>
		<SkillsCollection />
	</article>
	<article>
		<SkillsDescription />
	</article>
</section>

<style>
	section {
		display: grid;
		gap: 2rem;
		@media (width > 600px) {
			grid-template-columns: 3fr 1fr;
		}
	}

	article {
		--color-bg-gradient: linear-gradient(
			15deg,
			hsla(271, 76%, 53%, 0.9),
			70%,
			hsla(0, 100%, 50%, 0.9)
		);
		--color-bg: hsla(271, 76%, 70%, 0.4);

		border: 1px solid white;
		border-radius: 1rem;
		background: var(--color-bg);
		padding: 1rem;
	}
</style>
