---
import skillsItemsData from '../../../data/skills/items.json';
import SkillsIcon from './SkillsIcon.astro';
---

<section class='skills__group'>
	<h3>JS</h3>
	<div class='skills__icon-grid'>
		{
			skillsItemsData.map(skill => {
				return <SkillsIcon skill={skill} />;
			})
		}
	</div>
</section>

<style>
	section {
		display: flex;
		flex-direction: column;
		gap: var(--spacing);
		border: 3px dotted white;
		padding: var(--spacing);
	}

	h3 {
		font-size: 1.5rem;
	}

	.skills__icon-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(60px, 1fr));
		justify-content: right;
		gap: var(--spacing);
	}
</style>
