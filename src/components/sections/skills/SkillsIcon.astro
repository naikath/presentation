---
import { Image } from 'astro:assets';
import type { Item } from '../../../utils/languages/data.types';

interface Props {
	item: Item;
}

const { item } = Astro.props;
---

<button
	class='skills__icon'
	data-id={item.id}
	data-name={item.name}
	data-img={item.img}
>
	<Image
		src={item.img}
		alt={`${item.name} icon`}
		width='60'
		height='60'
	/>
</button>

<style>
	.skills__icon {
		border: 2px solid transparent;
		border-radius: 1rem;
		background: hsla(231, 48%, 45%, 0.6) radial-gradient(hsl(0, 0%, 100%, 0.5), 50%, transparent);
		padding: 0.5rem;
		aspect-ratio: 1;
		user-select: none;
	}

	.skills__icon img {
		filter: drop-shadow(0 0 1px hsla(0, 0%, 0%, 0.5));
		border-radius: 0.5rem;
		width: 100%;
		height: 100%;
		object-fit: contain;
	}

	.skills__icon:focus {
		box-shadow: 0 0 1rem darkblue inset;
		border-color: transparent;
	}
</style>
