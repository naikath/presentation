---
import { Image } from 'astro:assets';
import type { Item } from '../../../utils/languages/data.types';

interface Props {
	item: Item;
}

const { item } = Astro.props;
---

<div
	class='skills__icon'
	data-id={item.id}
	data-name={item.name}
	data-img={item.img}
	tabindex='0'
>
	<Image
		src={item.img}
		alt={`${item.name} icon`}
		width='60'
		height='60'
	/>
</div>

<style>
	.skills__icon {
		border: 2px solid transparent;
		border-radius: 1rem;
		background-color: hsla(231, 48%, 45%, 0.6);
		aspect-ratio: 1;
		user-select: none;
	}

	.skills__icon img {
		width: 100%;
		height: 100%;
		object-fit: contain;
	}

	.skills__icon:focus-within {
		border-color: red;
	}
</style>
